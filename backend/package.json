{
  "name": "iexist-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register index.ts",
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register index.ts",
    "build": "tsc && tsc-alias",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit --no-cache",
    "test:watch": "cross-env NODE_ENV=test jest --watch --no-cache",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --no-cache",
    "test:emotion": "cross-env NODE_ENV=test jest --no-cache tests/integration/emotionLog.test.ts --detectOpenHandles --forceExit",
    "test:clear": "jest --clearCache",
    "db:test": "ts-node -r tsconfig-paths/register utils/testDb.ts",
    "db:check": "ts-node -r tsconfig-paths/register utils/checkDb.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@types/cookie-parser": "1.4.3",
    "@types/express": "4.17.21",
    "@types/express-validator": "^2.20.33",
    "@types/helmet": "4.0.0",
    "@types/hpp": "0.2.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.2.0",
    "helmet": "7.0.0",
    "hpp": "0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.11.3",
    "rate-limiter-flexible": "^5.0.0",
    "sequelize": "^6.x.x",
    "sequelize-typescript": "^2.x.x",
    "winston": "^3.16.0",
    "xss-clean": "0.1.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.17.6",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "sqlite3": "^5.1.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "*.ts",
      "controllers/**/*.ts",
      "models/**/*.ts",
      "routes/**/*.ts",
      "middleware/**/*.ts",
      "types/**/*.ts",
      "utils/**/*.ts"
    ],
    "ext": "ts",
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "node_modules"
    ],
    "exec": "ts-node -r tsconfig-paths/register"
  }
}
