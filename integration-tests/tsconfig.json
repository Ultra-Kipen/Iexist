{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["e2e/**/*", "api-tests/**/*", "helpers/**/*"],
  "exclude": ["node_modules"]
}