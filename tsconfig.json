{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "types": ["jest", "node"],
      "esModuleInterop": true,
      "allowJs": true,
      "jsx": "react-native"
    }
  },
  "include": [
  "src/**/*",
    "backend/**/*",
    "App.tsx"
  ],
  "exclude": [ "node_modules",
  "babel.config.js",
  "metro.config.js",
  "jest.config.js"]
}